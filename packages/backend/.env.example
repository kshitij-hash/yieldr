# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL=600

# Stacks Blockchain API
STACKS_API_URL=https://api.testnet.hiro.so
STACKS_NETWORK=testnet

# Server Configuration
PORT=3001
NODE_ENV=development

# Protocol Contract Addresses (optional)
# ZEST_PROTOCOL_CONTRACT=
# VELAR_DEX_CONTRACT=
# ALEX_PROTOCOL_CONTRACT=

# Logging
LOG_LEVEL=info

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW_MS=60000

# Cache Settings
CACHE_REFRESH_INTERVAL=600000      # 10 minutes
CACHE_STALE_THRESHOLD=1800000      # 30 minutes

# AI Settings
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=1500
AI_FALLBACK_ENABLED=true

# Safety Settings
MAX_APY_THRESHOLD=1000
MIN_TVL_FOR_RECOMMENDATION=1000000
