# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL=600

# Stacks Blockchain API
STACKS_API_URL=https://api.testnet.hiro.so
STACKS_NETWORK=testnet

# Server Configuration
PORT=3001
NODE_ENV=development

# Protocol Contract Addresses (optional)
# VELAR_DEX_CONTRACT=
# ALEX_PROTOCOL_CONTRACT=

# BitYield Contract Addresses (testnet deployment)
# Update these after deploying contracts to testnet/mainnet
# NOTE: v5 uses official testnet sBTC contract (ST1F7QA2MDF17S807EPA36TSS8AMEFY4KA9TVGWXT.sbtc-token)
# NOTE: pool-oracle-v2 includes TVL support (v1.1.0)
BITYIELD_DEPLOYER_ADDRESS=STKBH2VR2QNEFQDNCVRS7K3DJVQ3WYB38GTENFFQ
BITYIELD_VAULT_CONTRACT=STKBH2VR2QNEFQDNCVRS7K3DJVQ3WYB38GTENFFQ.bityield-vault-v5
BITYIELD_POOL_ORACLE_CONTRACT=STKBH2VR2QNEFQDNCVRS7K3DJVQ3WYB38GTENFFQ.pool-oracle-v2
BITYIELD_ALEX_POOL_CONTRACT=STKBH2VR2QNEFQDNCVRS7K3DJVQ3WYB38GTENFFQ.simulated-alex-pool
BITYIELD_VELAR_POOL_CONTRACT=STKBH2VR2QNEFQDNCVRS7K3DJVQ3WYB38GTENFFQ.simulated-velar-pool

# Oracle Sync Service Configuration
# Enable automatic syncing of mainnet APY to testnet oracle contract
ORACLE_SYNC_ENABLED=false
ORACLE_SYNC_INTERVAL_MS=600000  # 10 minutes (600000ms)

# Deployer Private Key (required for oracle updates)
# WARNING: Keep this secret! Never commit to version control
# DEPLOYER_PRIVATE_KEY=your-private-key-here

# Logging
LOG_LEVEL=info

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW_MS=60000

# Cache Settings
CACHE_REFRESH_INTERVAL=600000      # 10 minutes
CACHE_STALE_THRESHOLD=1800000      # 30 minutes

# AI Settings
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=1500
AI_FALLBACK_ENABLED=true

# Safety Settings
MAX_APY_THRESHOLD=1000
MIN_TVL_FOR_RECOMMENDATION=1000000
