{
  "name": "@bityield/backend",
  "version": "1.0.0",
  "description": "AI-powered sBTC yield optimization backend for BitYield",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "worker": "tsx src/workers/yield-updater.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "bitcoin",
    "defi",
    "sbtc",
    "stacks",
    "yield-optimization",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@stacks/blockchain-api-client": "^8.1.2",
    "@stacks/network": "^7.2.0",
    "@stacks/transactions": "^7.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "ioredis": "^5.4.2",
    "node-cron": "^3.0.3",
    "openai": "^4.104.0",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/node": "^24.4.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  }
}
