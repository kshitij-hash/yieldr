{
  "name": "@bityield/contracts",
  "version": "1.0.0",
  "description": "BitYield smart contracts for Stacks blockchain",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\"",
    "check": "clarinet check",
    "console": "clarinet console",
    "format": "clarinet format --in-place",
    "deploy:generate": "clarinet deployments generate --testnet",
    "deploy:check": "clarinet deployments check",
    "deploy:testnet": "clarinet deployments apply --testnet",
    "deploy:simple": "npx tsx deployments/simple-deployment.ts testnet",
    "deploy:mainnet": "npx tsx deployments/simple-deployment.ts mainnet"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hirosystems/clarinet-sdk": "^3.6.0",
    "@stacks/rendezvous": "^0.10.0",
    "@stacks/transactions": "^7.2.0",
    "@stacks/wallet-sdk": "^7.2.0",
    "@types/node": "^24.4.0",
    "chokidar-cli": "^3.0.0",
    "vitest": "^3.2.4",
    "vitest-environment-clarinet": "^2.3.0"
  }
}
